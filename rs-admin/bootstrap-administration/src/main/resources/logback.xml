<configuration>

	<include resource="fr/cnes/regards/framework/logbackappender/defaults.xml" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
		<syslogHost>localhost</syslogHost>
		<facility>LOCAL0</facility>
		<suffixPattern>${SYSLOG_PATTERN}</suffixPattern>
		<port>514</port>
	</appender>

	<appender name="SYSLOG-SECU" class="ch.qos.logback.classic.net.SyslogAppender">
		<syslogHost>localhost</syslogHost>
		<facility>LOCAL1</facility>
		<suffixPattern>${SYSLOG_SECURITY_PATTERN}</suffixPattern>
		<port>514</port>
	</appender>

	<appender name="regardsAmqpAppender"
		class="ch.qos.logback.ext.spring.DelegatingLogbackAppender">
		<filter
			class="fr.cnes.regards.framework.logbackappender.RegardsAmqpAppenderFilter">
			<level>INFO</level>
		</filter>
	</appender>

	<logger name="fr.cnes.regards" level="INFO" additivity="true">
		<appender-ref ref="regardsAmqpAppender" />
	</logger>

	<!-- Log the microservice start -->
	<logger name="fr.cnes.regards.microservices.administration"
		level="INFO">
		<appender-ref ref="SYSLOG-SECU" />
	</logger>

	<!-- Log the user request authentication -->
	<logger name="fr.cnes.regards.framework.authentication" level="INFO">
		<appender-ref ref="SYSLOG-SECU" />
	</logger>

	<logger name="fr.cnes.regards.framework.security" level="INFO">
		<appender-ref ref="SYSLOG-SECU" />
	</logger>

	<logger name="fr.cnes.regards.framework.authentication.internal"
		level="INFO">
		<appender-ref ref="SYSLOG-SECU" />
	</logger>

	<!-- Log the resource access -->
	<logger name="fr.cnes.regards.modules.accessrights.service.resources"
		level="INFO">
		<appender-ref ref="SYSLOG-SECU" />
	</logger>



	<!-- <logger name="fr.cnes.regards.framework.logbackappender" level="DEBUG"/> 
		<logger name="fr.cnes.regards.modules.metrics" level="DEBUG"/> <logger name="fr.cnes.regards.framework.security.autoconfigure" 
		level="DEBUG"/> <logger name="fr.cnes.regards.framework.security.filter" 
		level="DEBUG"/> -->

	<logger name="fr.cnes.regards.framework.jpa" level="DEBUG" />
	<logger name="org.hibernate.tool.hbm2ddl" level="DEBUG">
		<appender-ref ref="STDOUT" />
	</logger>
	<root level="info">
		<appender-ref ref="SYSLOG" />
		<appender-ref ref="STDOUT" />
	</root>

</configuration>
