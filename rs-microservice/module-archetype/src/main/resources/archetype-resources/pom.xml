<?xml version="1.0" encoding="UTF-8"?>
<!-- LICENSE_PLACEHOLDER -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>fr.cnes.regards.modules</groupId>
	<artifactId>${artifactId}</artifactId>
	<version>${version}</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.4.0.RELEASE</version>
	</parent>

	<url>https://github.com/RegardsOss/RegardsOss.github.io</url>

	<modules>
		<module>${artifactId}-dao</module>
		<module>${artifactId}-domain</module>
		<module>${artifactId}-rest</module>
		<module>${artifactId}-service</module>
		<module>${artifactId}-signature</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<!-- Core dependencies -->
			<dependency>
				<groupId>fr.cnes.regards.microservices</groupId>
				<artifactId>microservice-core</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules</groupId>
				<artifactId>module-jobs</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<!-- Module layers -->
			<dependency>
				<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
				<artifactId>${artifactId}-dao</artifactId>
				<version>${version}</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
				<artifactId>${artifactId}-domain</artifactId>
				<version>${version}</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
				<artifactId>${artifactId}-rest</artifactId>
				<version>${version}</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
				<artifactId>${artifactId}-service</artifactId>
				<version>${version}</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
				<artifactId>${artifactId}-signature</artifactId>
				<version>${version}</version>
			</dependency>
			<!-- COTS -->
			<!-- Netflix Feign REST Client -->
			<dependency>
				<groupId>com.netflix.feign</groupId>
				<artifactId>feign-core</artifactId>
				<version>8.18.0</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>fr.cnes.regards.modules</groupId>
			<artifactId>module-core</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>