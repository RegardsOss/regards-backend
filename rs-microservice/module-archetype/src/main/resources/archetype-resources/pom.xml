<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
 
  <groupId>fr.cnes.regards.modules</groupId>
  <artifactId>${artifactId}</artifactId>
  <version>${version}</version>
  <packaging>pom</packaging>
 
  <name>REGARDS module - ${artifactId} </name>
  <url>https://github.com/RegardsOss/RegardsOss.github.io</url>
  
  <parent>
  	<groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>1.3.5.RELEASE</version>
  </parent>
  
  <modules>
  	<module>${artifactId}-dao</module>
  	<module>${artifactId}-domain</module>
  	<module>${artifactId}-rest</module>
  	<module>${artifactId}-service</module>
  	<module>${artifactId}-signature</module>
  </modules>
  
 <dependencyManagement>
  	<dependencies>
  		<dependency>
  			<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
  			<artifactId>${artifactId}-dao</artifactId>
  			<version>${version}</version>
  		</dependency>
  		<dependency>
  			<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
  			<artifactId>${artifactId}-domain</artifactId>
  			<version>${version}</version>
  		</dependency>
  		<dependency>
  			<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
  			<artifactId>${artifactId}-rest</artifactId>
  			<version>${version}</version>
  		</dependency>
  		<dependency>
  			<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
  			<artifactId>${artifactId}-service</artifactId>
  			<version>${version}</version>
  		</dependency>
  		<dependency>
  			<groupId>fr.cnes.regards.modules.${artifactId}</groupId>
  			<artifactId>${artifactId}-signature</artifactId>
  			<version>${version}</version>
  		</dependency>
  	</dependencies>
  </dependencyManagement>
  
  <dependencies>
  	<dependency>
  		<groupId>fr.cnes.regards.modules</groupId>
  		<artifactId>module-core</artifactId>
  		<version>0.0.1</version>
  	</dependency>
  </dependencies>
  
  <build>
 	    <plugins>
  			<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-compiler-plugin</artifactId>
		        <configuration>
		            <source>1.8</source>
		            <target>1.8</target>
		        </configuration>
			</plugin>
		</plugins>
  </build>
</project>