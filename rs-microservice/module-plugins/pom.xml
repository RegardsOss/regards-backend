<?xml version="1.0" encoding="UTF-8"?>
<!-- LICENSE_PLACEHOLDER -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>fr.cnes.regards.modules</groupId>
	<artifactId>module-plugins</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>fr.cnes.regards.microservices</groupId>
		<artifactId>rs-microservice</artifactId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>

	<modules>
		<module>module-plugins-client</module>
		<module>module-plugins-dao</module>
		<module>module-plugins-domain</module>
		<module>module-plugins-rest</module>
		<module>module-plugins-service</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<!-- Core dependencies -->
			<dependency>
				<groupId>fr.cnes.regards.microservices</groupId>
				<artifactId>microservice-core</artifactId>
				<version>1.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules</groupId>
				<artifactId>module-jobs</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<!-- Module layers -->
			<dependency>
				<groupId>fr.cnes.regards.modules.plugins</groupId>
				<artifactId>module-plugins-dao</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.plugins</groupId>
				<artifactId>module-plugins-domain</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.plugins</groupId>
				<artifactId>module-plugins-rest</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.plugins</groupId>
				<artifactId>module-plugins-service</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.cnes.regards.modules.plugins</groupId>
				<artifactId>module-plugins-client</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>
			<!-- COTS -->
			<!-- Netflix Feign REST Client -->
			<dependency>
				<groupId>com.netflix.feign</groupId>
				<artifactId>feign-core</artifactId>
				<version>8.18.0</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>fr.cnes.regards.modules</groupId>
			<artifactId>module-core</artifactId>
			<version>1.1-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
