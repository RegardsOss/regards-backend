<PLUGIN_CONFIGURATION xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="schemas_plugins.xsd">
    <fileNamePattern>jason2_cpf_([0-9]{6})_([0-9]{3})([0-9]{1}).cne</fileNamePattern>
    <compositeAttribute>
        <name>TIME_PERIOD</name>
        <order>1</order>
        <attributeFromName>
            <groupNumber>1</groupNumber>
            <specification>
                <name>START_DATE</name>
                <valueType>DATE_TIME</valueType>
                <formatRead>yyMMdd</formatRead>
            </specification>
        </attributeFromName>
    <attributeFromName>
            <groupNumber>1</groupNumber>
            <specification>
                <name>STOP_DATE</name>
                <valueType>DATE_TIME</valueType>
                <formatRead>yyMMdd</formatRead>
                <calculationClass>fr.cnes.regards.modules.acquisition.plugins.ssalto.calc.SetCpfEphemerisStopDate</calculationClass>
            </specification>
        </attributeFromName>  
    </compositeAttribute>



    <compositeAttribute>
        <name>CYCLE_RANGE</name>
        <order>2</order>
        <translatedAttributeFromCycleFile>
            <otherAttributeName>START_DATE</otherAttributeName>
            <specification>
                <name>CYCLE_MIN</name>
                <valueType>INTEGER</valueType>
            </specification>
        </translatedAttributeFromCycleFile>
        <translatedAttributeFromCycleFile>
            <otherAttributeName>STOP_DATE</otherAttributeName>
            <specification>
                <name>CYCLE_MAX</name>
                <valueType>INTEGER</valueType>
            </specification>
        </translatedAttributeFromCycleFile>
    </compositeAttribute>

    <attributeFromName>
        <groupNumber>3</groupNumber>
        <specification>
            <name>OBJECT_VERSION</name>
            <valueType>INTEGER</valueType>
            <order>4</order>
        </specification>
    </attributeFromName>

  <fileInfoAttribute>
        <fileInformation>LAST_MODIFICATION_DATE</fileInformation>
        <specification>
            <name>FILE_CREATION_DATE</name>
            <valueType>DATE_TIME</valueType>
            <order>5</order>
        </specification>
    </fileInfoAttribute>

</PLUGIN_CONFIGURATION>
