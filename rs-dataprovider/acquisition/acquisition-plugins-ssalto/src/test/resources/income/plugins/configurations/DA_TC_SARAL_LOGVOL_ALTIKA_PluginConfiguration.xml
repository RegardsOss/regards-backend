<PLUGIN_CONFIGURATION xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="schemas_plugins.xsd">
    <fileNamePattern>ALK_LV_([0-9]{4})_([0-9]{8})_(EEPROM|RAM_PROG|RAM_DATA)_(HDR|BIN|TCH)</fileNamePattern>
    <compositeAttribute>
        <name>TIME_PERIOD</name>
        <order>1</order>
        <attributeFromName>
            <groupNumber>2</groupNumber>
            <specification>
                <name>START_DATE</name>
                <valueType>DATE_TIME</valueType>
                <formatRead>yyyyMMdd</formatRead>
            </specification>
        </attributeFromName>
        <attributeFromName>
            <groupNumber>2</groupNumber>
            <specification>
                <name>STOP_DATE</name>
                <valueType>DATE_TIME</valueType>
                <formatRead>yyyyMMdd</formatRead>
                <calculationClass>fr.cnes.regards.modules.acquisition.plugins.ssalto.calc.SetStopDateHours</calculationClass>
            </specification>
        </attributeFromName>
    </compositeAttribute>

    <attributeFromName>
        <groupNumber>3</groupNumber>
        <specification>
            <name>PRODUCT_OPTION</name>
            <valueType>STRING</valueType>
            <order>2</order>
        </specification>
    </attributeFromName>


    <attributeFromName>
        <groupNumber>1</groupNumber>
        <specification>
            <name>OBJECT_VERSION</name>
            <valueType>STRING</valueType>
            <order>3</order>
	    <calculationClass>fr.cnes.regards.modules.acquisition.plugins.ssalto.calc.SetSeparator</calculationClass>
        </specification>
    </attributeFromName>

    <attributeFromName>
       <groupNumber>2</groupNumber>
       <specification>
            <name>FILE_CREATION_DATE</name>
            <valueType>DATE_TIME</valueType>
            <order>4</order>
            <formatRead>yyyyMMdd</formatRead>
       </specification>
    </attributeFromName>

</PLUGIN_CONFIGURATION>
