<PLUGIN_CONFIGURATION xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="schemas_plugins.xsd">
 <fileNamePattern>(H2A_RA1_IDR_2P)([a-zA-Z]{1})(_([0-9]{4})_([0-9]{4})_([0-9]{8}_[0-9]{6})_([0-9]{8}_[0-9]{6}).nc)</fileNamePattern>

    <compositeAttribute>
        <name>TIME_PERIOD</name>
        <order>1</order>
        <attributeFromName>
            <groupNumber>6</groupNumber>
            <specification>
                <name>START_DATE</name>
                <valueType>DATE_TIME</valueType>
                <formatRead>yyyyMMdd_HHmmss</formatRead>
            </specification>
        </attributeFromName>
        <attributeFromName>
            <groupNumber>7</groupNumber>
            <specification>
                <name>STOP_DATE</name>
                <valueType>DATE_TIME</valueType>
                <formatRead>yyyyMMdd_HHmmss</formatRead>
            </specification>
        </attributeFromName>
    </compositeAttribute>

    <compositeAttribute>
        <name>CYCLE_RANGE</name>
        <order>2</order>
        <attributeFromName>
            <groupNumber>4</groupNumber>
            <specification>
                <name>CYCLE_MIN</name>
                <valueType>INTEGER</valueType>
            </specification>
        </attributeFromName>
        <attributeFromName>
            <groupNumber>4</groupNumber>
            <specification>
                <name>CYCLE_MAX</name>
                <valueType>INTEGER</valueType>
            </specification>
        </attributeFromName>
    </compositeAttribute>

    <compositeAttribute>
        <name>ORBIT_RANGE</name>
        <order>3</order>
        <attributeFromName>
            <groupNumber>5</groupNumber>
            <specification>
                <name>ORBIT_MIN</name>
                <valueType>INTEGER</valueType>
            </specification>
        </attributeFromName>
        <attributeFromName>
            <groupNumber>5</groupNumber>
            <specification>
                <name>ORBIT_MAX</name>
                <valueType>INTEGER</valueType>
            </specification>
        </attributeFromName>
    </compositeAttribute>

    <attributeFromName>
        <groupNumber>2</groupNumber>
        <specification>
            <name>OBJECT_VERSION</name>
            <valueType>STRING</valueType>
            <order>6</order>
        </specification>
    </attributeFromName>

    <attributeFromName>
        <groupNumber>1</groupNumber>
        <groupNumber>3</groupNumber>
        <specification>
            <name>RADICAL</name>
            <valueType>STRING</valueType>
            <order>7</order>
        </specification>
    </attributeFromName>

   <attributeFromAsciiFile>
        <linePattern>.*Product_Creation_Time.*([0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}).*</linePattern>
        <lineNumber>0</lineNumber>
        <groupNumber>1</groupNumber>
        <specification>
            <name>FILE_CREATION_DATE</name>
            <valueType>DATE_TIME</valueType>
            <order>5</order>
            <formatRead>yyyy-MM-dd'T'hh:mm:ss</formatRead>
        </specification>
    </attributeFromAsciiFile>

    <attributeFromOther>
        <otherAttributeName>ORBIT_MIN</otherAttributeName>
        <specification>
            <name>PHASE</name>
            <valueType>STRING</valueType>
            <order>11</order>
            <calculationClass>fr.cnes.regards.modules.acquisition.plugins.ssalto.calc.IsPairCalculation</calculationClass>
        </specification>
    </attributeFromOther>
</PLUGIN_CONFIGURATION>
