<configuration>

        <property name="APP_NAME"
              value="rs-authentication"/>
        <include resource="fr/cnes/regards/framework/logbackappender/console_appender.xml" />
        <include resource="fr/cnes/regards/framework/logbackappender/syslog_appender.xml" />
        <include resource="fr/cnes/regards/framework/logbackappender/file_appender.xml" />

    <!-- Log the user request authentication -->
    <logger name="fr.cnes.regards.framework.authentication" level="INFO">
        <appender-ref ref="SYSLOG-SECU"/>
    </logger>

    <logger name="fr.cnes.regards.framework.security" level="INFO">
        <appender-ref ref="SYSLOG-SECU"/>
    </logger>

    <logger name="fr.cnes.regards.framework.authentication.internal"
            level="INFO">
        <appender-ref ref="SYSLOG-SECU"/>
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SYSLOG-SECU"/>
    </root>

</configuration>
