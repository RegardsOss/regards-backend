<?xml version="1.0" encoding="UTF-8"?>
<model 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../model_V1.0.xsd">
	<name>CDDP_OBSERVATORY_MODEL</name>
	<description>Description des caractéristiques de l'observatoire auquel se rapporte un jeu CDPP</description>
	<version>1</version>
	<type>COLLECTION</type>
    <attribute>
        <label>Nom</label>
        <name>OBSERVATORY</name>
        <description>Satellite, sonde spatiale, installation ou plate_forme qui heberge l'instrument qui collecte les données</description>
        <type>STRING</type>
        <restriction>
            <pattern>/^.{1,32}$/</pattern>
        </restriction>
    </attribute>
    <attribute>
        <label>Région</label>
        <name>OBSERVATORY_REGION</name>
        <description>Région pour un observatoire</description>
        <type>STRING</type>
        <restriction>
            <enumeration>
                <value>ATMOSPHERE</value>
                <value>AURORAL_REGION</value>
                <value>BOW_SHOCK</value>
                <value>COMET_GIACOBINI-ZINNER</value>
                <value>COMET_HALLEY</value>
                <value>CUSP</value>
                <value>EQUATORIAL_IONOSPHERE</value>
                <value>EXOSPHERE</value>
                <value>FORESHOCK</value>
                <value>GROUND</value>
                <value>HIGH_LATITUDE_IONOSPHERE</value>
                <value>HIGH_LATITUDE_MAGNETOSPHERE</value>
                <value>INNER_MAGNETOSPHERE</value>
                <value>INTERPLANETARY</value>
                <value>IONOSPHERE</value>
                <value>MAGNETOPAUSE</value>
                <value>MAGNETOSHEATH</value>
                <value>MAGNETOSPHERE</value>
                <value>MAGNETOTAIL</value>
                <value>PLANETARY_MAGNETOSPHERE</value>
                <value>PLASMASPHERE</value>
                <value>POLAR_CAP</value>
                <value>RADIATION BELT</value>
                <value>SOLAR_WIND</value>
                <value>TERRESTRIAL_MAGNETOSPHERE</value>
                <value>THERMOSPHERE</value>
            </enumeration>
        </restriction>
    </attribute>
    <attribute>
        <label>Date de début de l'observatoire</label>
        <name>OBSERVATORY_START_DATE</name>
        <description>Date de début de l'observatoire</description>
        <type>DATE_ISO8601</type>
    </attribute>
    <attribute>
        <label>Date de fin de l'observatoire</label>
        <name>OBSERVATORY_STOP_DATE</name>
        <description>Date de fin de l'observatoire</description>
        <type>DATE_ISO8601</type>
    </attribute>
</model>