<?xml version="1.0" encoding="UTF-8"?>
<model 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../model_V1.0.xsd">
	<name>CDDP_INSTRUMENT_MODEL</name>
	<description>Description des attributs de l'instrument auquel se rapporte un jeu CDPP</description>
	<version>1</version>
	<type>COLLECTION</type>
    <attribute>
        <label>Nom</label>
        <name>INSTRUMENT</name>
        <description>Nom de l'instrument utilisé pour collecter les données</description>
        <type>STRING</type>
        <restriction>
            <pattern>/^.{1,32}$/</pattern>
        </restriction>
    </attribute>
    <attribute>
        <label>Technique ou methode</label>
        <name>INSTRUMENT_TYPE</name>
        <description>Type de technique ou de méthode pour réaliser une observation</description>
        <type>STRING</type>
        <restriction>
            <enumeration>
                <value>ANTENNA</value>
                <value>CHANNELTRON</value>
                <value>COHERENT_SCATTER_RADAR</value>
                <value>DATA_PROCESSING_UNIT</value>
                <value>DOUBLE_SPHERE</value>
                <value>ELECTRON_DRIFT</value>
                <value>ELECTROSTATIC_ANALYSER</value>
                <value>ENERGETIC_PARTICLE_INSTRUMENT</value>
                <value>FARADAY_CUP</value>
                <value>FLUX_FEEDBACK</value>
                <value>INCOHERENT_SCATTER_RADAR</value>
                <value>LANGMUIR_PROBE</value>
                <value>LONG_WIRE</value>
                <value>MAGNETOMETER</value>
                <value>MASS_SPECTROMETER</value>
                <value>MICRO-CHANNEL_PLATE</value>
                <value>MONOPOLE</value>
                <value>MUTUAL_IMPEDANCE_PROBE</value>
                <value>QUADRISPHERICAL_ANALYSER</value>
                <value>RESONANCE_SOUNDER</value>
                <value>RETARDING_POTENTIAL_ANALYZER</value>
                <value>SEARCH_COIL</value>
                <value>SPACECRAFT_POTENTIAL_CONTROL</value>
                <value>SPECTRAL_POWER_RECEIVER</value>
                <value>WAVEFORM_RECEIVER</value>
            </enumeration>
        </restriction>
    </attribute>
    <attribute>
        <label>Mesure</label>
        <name>MEASUREMENT_TYPE</name>
        <description>Type de la mesure</description>
        <type>STRING</type>
        <restriction>
            <enumeration>
                <value>ACTIVITY_INDEX</value>
                <value>ELECTRIC_FIELD</value>
                <value>EMITTED_CURRENT</value>
                <value>ENERGETIC_PARTICLES</value>
                <value>ION_COMPOSITION</value>
                <value>MAGNETIC_FIELD</value>
                <value>NEUTRAL_ATOM IMAGES</value>
                <value>NEUTRAL_GAS</value>
                <value>PARTICLE_CORRELATOR</value>
                <value>RADIO_AND_PLASMA_WAVES</value>
                <value>RADIO_SOUNDINGS</value>
                <value>STATUS</value>
                <value>THERMAL_PLASMA</value>
            </enumeration>
        </restriction>
    </attribute>
</model>