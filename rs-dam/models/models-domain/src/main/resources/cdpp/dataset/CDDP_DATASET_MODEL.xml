<?xml version="1.0" encoding="UTF-8"?>
<model 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../model_V1.0.xsd">
	<name>CDDP_DATASET_MODEL</name>
	<description>Description d'un jeu de données pour le CDPP</description>
	<version>1</version>
	<type>DATASET</type>
	<attribute>
		<label>Nom (en anglais)</label>
		<name>LABEL</name>
		<description>Nom (en anglais) d'une entité (jeu,table,collection) vue sur l'IHM</description>
		<type>STRING</type>
        <restriction>
            <pattern>/^.{1,80}$/</pattern>
        </restriction>
	</attribute>
	<attribute>
		<label>Taille</label>
		<name>FILE_FORMAT</name>
		<description>Type de format des fichiers du jeu de données</description>
		<type>STRING</type>
		<restriction>
			<enumeration>
				<value>ASCII</value>
				<value>CDF</value>
				<value>CDPP</value>
				<value>CEF</value>
				<value>GIF</value>
				<value>NATIVE</value>
				<value>PDF</value>
				<value>PNG</value>
				<value>POSTSCRIPT</value>
			</enumeration>
		</restriction>
	</attribute>
	<attribute>
		<label>Niveau de traitement</label>
		<name>PROCESSING_LEVEL</name>
		<description>Niveau de traitement effectué sur les données</description>
		<type>STRING</type>
		<restriction>
			<enumeration>
				<value>AUXILIARY</value>
				<value>CALIBRATED</value>
				<value>DERIVED</value>
				<value>RAW</value>
				<value>UNCALIBRATED</value>
			</enumeration>
		</restriction>
	</attribute>
    <attribute>
        <label>Date et temps debut</label>
        <name>START_DATE</name>
        <description>Date et temps debut</description>
        <type>DATE_ISO8601</type>
        <computation>
            <label>CdppDatasetStartDate</label>
            <min_compute parameterAttributeFragmentName="TIME_PERIOD" parameterAttributeName="START_DATE" />
        </computation>
    </attribute>
    <attribute>
        <label>Date et temps fin</label>
        <name>STOP_DATE</name>
        <description>Date et temps fin</description>
        <type>DATE_ISO8601</type>
        <computation>
            <label>CdppDatasetStopDate</label>
            <min_compute parameterAttributeFragmentName="TIME_PERIOD" parameterAttributeName="STOP_DATE" />
        </computation>
    </attribute>
    <attribute>
        <label>Nombre total d'objets</label>
        <name>NB_OBJECTS</name>
        <description>Nombre total d'objets</description>
        <type>INTEGER</type>
        <computation>
            <label>CdppDatasetNbObjects</label>
            <count/>
        </computation>
    </attribute>
    <attribute>
        <label>Taille totale</label>
        <name>TOTAL_SIZE</name>
        <description>Taille totale des objets</description>
        <type>INTEGER</type>
        <computation>
            <label>CdppDatasetTotalSize</label>
            <sum_compute parameterAttributeName="FILE_SIZE" />
        </computation>
    </attribute>
	<fragment>
		<name>PHYSICAL_PARAMETER</name>
		<description>Propriété physique de l'observation mesurée ou derivée</description>
		<version>1</version>
		<attribute>
			<label>Type d'entite</label>
			<name>ENTITY</name>
			<description>Type d'entité dont la propriété est mesurée</description>
			<type>STRING</type>
            <restriction>
                <enumeration>
                    <value>AEROSOL</value>
                    <value>ALPHA</value>
                    <value>DUST</value>
                    <value>ELECTRIC_FIELD</value>
                    <value>ELECTRON</value>
                    <value>HEAVY_MASSES</value>
                    <value>HELIUM</value>
                    <value>HELIUM+</value>
                    <value>INSTRUMENT</value>
                    <value>IONS</value>
                    <value>ION_CNO</value>
                    <value>LIGHT_MASSES</value>
                    <value>MAGNETIC_FIELD</value>
                    <value>MOLECULE</value>
                    <value>NEUTRAL</value>
                    <value>OBSERVATORY</value>
                    <value>OXYGEN+</value>
                    <value>PARTICLES</value>
                    <value>PHOTON</value>
                    <value>PROTON</value>
                </enumeration>
            </restriction>
		</attribute>
		<attribute>
			<label>Propriété</label>
			<name>PROPERTY</name>
			<description>Propriété d'une entité qui est mesurée</description>
			<type>STRING</type>
            <restriction>
                <enumeration>
                    <value>CHARGE_DENSITY</value>
                    <value>COMPONENT</value>
                    <value>CORRECTED_PARTICLE_COUNT_RATE</value>
                    <value>CURRENT</value>
                    <value>DENSITY</value>
                    <value>DIFFERENTIAL_ENERGY_FLUX</value>
                    <value>DIFFERENTIAL_PARTICLE_FLUX</value>
                    <value>DIRECTION</value>
                    <value>DRIFT_VELOCITY</value>
                    <value>HEAT_FLUX</value>
                    <value>INTEGRAL_PARTICLE_FLUX</value>
                    <value>MAGNITUDE</value>
                    <value>MASS_DENSITY</value>
                    <value>MASS_FLUX</value>
                    <value>NUMBER_DENSITY</value>
                    <value>PARTICLE_ENERGY_FLUX</value>
                    <value>PARTICLE_PHASE_SPACE_DENSITY</value>
                    <value>PHASE</value>
                    <value>PHASE_DIFFERENCE</value>
                    <value>PLASMA_FREQUENCY</value>
                    <value>POTENTIAL</value>
                    <value>PRESSURE</value>
                    <value>PRESSURE_TENSOR</value>
                    <value>PROBE_POTENTIAL</value>
                    <value>RAW_PARTICLE_COUNTS</value>
                    <value>RAW_PARTICLE_COUNT_RATE</value>
                    <value>RESONANCE_FREQUENCY</value>
                    <value>SPEED</value>
                    <value>STATUS</value>
                    <value>TEMPERATURE</value>
                    <value>TIME_OF_FLIGHT</value>
                    <value>TOTAL_PARTICLE_FLUX</value>
                    <value>VECTOR</value>
                    <value>VECTOR_MASS_FLUX</value>
                    <value>VELOCITY</value>
                </enumeration>
            </restriction>
        </attribute>
		<attribute>
			<label>Fluctuations</label>
			<name>FLUCTUATIONS</name>
			<description>Fluctuations temporelles d'une propriété mesurée pour un type d'entité ou informations supplémentaires</description>
			<type>STRING</type>
            <restriction>
                <enumeration>
                    <value>BISPECTRUM</value>
                    <value>CORRELATION</value>
                    <value>COVARIANCE</value>
                    <value>CROSS_CORRELATION</value>
                    <value>FOURIER_SPECTRUM</value>
                    <value>FOURIER_CROSS_POWER_SPECTRUM</value>
                    <value>FOURIER_CROSS_SPECTRUM</value>
                    <value>FOURIER_POWER_SPECTRUM</value>
                    <value>MEAN_SQUARE_LEVEL</value>
                    <value>POYNTING_VECTOR</value>
                    <value>POLARISATION</value>
                    <value>RATIO</value>
                    <value>STOKES_PARAMETERS</value>
                    <value>VARIANCE_ESTIMATOR</value>
                    <value>WAVEFORM</value>
                    <value>WAVELET_SPECTRUM</value>
                    <value>WAVELET_CROSS_SPECTRUM</value>
                    <value>WAVELET_POWER_SPECTRUM</value>
                    <value>WAVELET_CROSS_POWER_SPECTRUM</value>
                </enumeration>
            </restriction>
		</attribute>
        <attribute>
            <label>Composé</label>
            <name>COMPOUND</name>
            <description>Composé: indiquant qu'un paramètre est derivé d'autres paramètres observés</description>
            <type>STRING</type>
            <restriction>
                <enumeration>
                    <value>ALFVEN_VELOCITY</value>
                    <value>PLASMA_BETA</value>
                    <value>DERIVED</value>
                </enumeration>
            </restriction>
        </attribute>
	</fragment>
    <fragment>
        <name>TEMPORAL_EXTRACTION_DEFINITION</name>
        <description>Informations relatives a l'extraction temporelle</description>
        <version>1</version>
        <attribute>
            <label>Type de date</label>
            <name>DATE_TYPE</name>
            <description>Type de codage du champ date dans un fichier</description>
            <type>STRING</type>
            <restriction>
                <enumeration>
                    <value>CCSDS_ASCII</value>
                    <value>CCSDS_BINARY</value>
                    <value>CDPP_ASCII</value>
                    <value>CDPP_BINARY</value>
                </enumeration>
            </restriction>
        </attribute>
        <attribute>
            <label>Type du fichier</label>
            <name>FILE_TYPE</name>
            <description>Type (structure,...) du fichier</description>
            <type>STRING</type>
            <restriction>
                <enumeration>
                    <value>FIXED_RECORD</value>
                    <value>VARIABLE_ASCII_RECORD</value>
                    <value>VARIABLE_BINARY_RECORD</value>
                </enumeration>
            </restriction>
        </attribute>
        <attribute>
            <label>Taille de l'enregistrement</label>
            <name>RECORD_LENGTH</name>
            <description>Nombre d'octets d'un enregistrement de taille fixe. Obligatoire pour les enregistrements de taille fixe</description>
            <type>INTEGER</type>
        </attribute>
        <attribute>
            <label>Taille de l'enregistrement</label>
            <name>DATE_POSITION</name>
            <description>Rang du 1er bit d'un enregistrement (bit gauche)</description>
            <type>INTEGER</type>
        </attribute>
    </fragment>
</model>